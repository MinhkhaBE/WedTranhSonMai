
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h4 style="text-align:center; color:red">@ViewBag.Thongbao</h4>
<table align="center">
    <tr>
        <td>
            <h2>ĐĂNG NHẬP</h2>
        </td>
    </tr>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td >Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng Nhập" />
            </td>
        </tr>
    }
</table>
